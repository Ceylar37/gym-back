generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "mongodb"
  url = env("DATABASE_URL")
}

model User {
  id                String   @id @default(auto()) @map("_id") @db.ObjectId
  email             String 
  password          String
  accessTokens      String[] @default([])
  refreshTokens     String[] @default([])
  exerciseTypes     ExerciseType[]
  trainings         Training[]

  activeTraining    ActiveTraining?
}

model ExerciseType {
  id                String   @id @default(auto()) @map("_id") @db.ObjectId
  name              String
  favorite          Boolean  @default(false)
  description       String   @default("")
  muscleGroups      String[] @default([])
  restTime          Int      @default(60)

  userId            String   @db.ObjectId
  user              User     @relation(fields: [userId], references: [id])

  trainingIds       String[]   @db.ObjectId @default([])
  trainings         Training[] @relation(fields: [trainingIds], references: [id])
}

model Training {
  id                String   @id @default(auto()) @map("_id") @db.ObjectId
  name              String
  favorite          Boolean  @default(false)
  description       String   @default("")
 
  userId            String   @db.ObjectId
  user              User     @relation(fields: [userId], references: [id])

  exerciseTypeIds   String[]   @db.ObjectId @default([])
  exerciseTypes     ExerciseType[] @relation(fields: [exerciseTypeIds], references: [id])

  activeTrainings   ActiveTraining[]
}

type ActiveTraining {
  dateStart         DateTime
  name              String
  description       String
  exercises         CurrentExercise[]
}

type CurrentExercise {
  name              String
  description       String
  restTime          Int
  sets              CurrentSet[]
}

type CurrentSet {
  weight            Int
  repeatCount       Int
  done              Boolean @default(false)
}